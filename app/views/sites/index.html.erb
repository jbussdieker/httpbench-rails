<h1>Sites</h1>

<div class="btn-toolbar">
  <%= link_to 'New Site', new_site_path, :class => 'btn' %>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Port</th>
    <th>Host</th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= link_to site.name, site %></td>
    <td><%= site.address %></td>
    <td><%= site.port %></td>
    <td><%= site.host %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
